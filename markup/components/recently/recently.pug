include ../product/product
include ../icon/icon
mixin recently(data)
	.recently
		.products
			.container
				.row.justify-content-between
					.col-xl-auto
						h2.products__title Недавно вы смотрели
					.col-xl-auto.d-none.d-xl-block
						button(type='button').products__arrow.btn.btn--prev.js-recently-product-prev
							| предадущий слайдер
							+icon('arrow-left', '15', '15')
						button(type='button').products__arrow.btn.btn--next.js-recently-product-next
							| следующий слайдер
							+icon('arrow-right', '15', '15')
				.products__wrapper
					.row.js-products-slider-recently
						each item in data.list
							.col.d-flex.flex-column
								.products__slide
									+product(item).recently__card.products__card
