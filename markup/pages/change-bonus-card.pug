doctype html
html(class="no-js", lang="ru")

	include ../components/head/head.pug
	include ../components/footer/footer.pug
	include ../components/header/header
	include ../components/breadcrumbs/breadcrumbs
	include ../components/order-history/order-history
	head
		+head(head.defaults)
	//script(src='%=static=%js/separate-js/script.js')
	link(href="%=static=%css/separate-css/styles.css" rel="stylesheet" type="text/css")
	body
		+header()
		.container
			+breadcrumbs()
		section.cabinet
			.container
				h2.cabinet__title Личный кабинет
				.row
					.col-xl-auto
						+personal-info()
					.col-xl-auto
						h3.cabinet__title-list.title.title--md Редактирование номера бонусной карты
						form.cabinet__body#change-password
							.cabinet__field-row
								.row.align-items-md-center
									.col-md-4.col-lg-3.col-xl-auto
										label(for="change-password-pass").cabinet__label.label Введите номер карты
									.col.col-xl-auto.ml-xl-auto
										input(type="number" value="57849849893409094390" required).cabinet__field.cabinet__field--xl.field#change-password-pass
							.cabinet__footer-fields.cabinet__footer-fields--wide
								.row
									.col.offset-md-4.offset-lg-3.offset-xl-0
										.row.justify-content-between.align-items-center
											.col-auto
												a(href="#").cabinet__cancel Отменить
											.col-auto
												button.cabinet__save.btn.btn--red Сохранить
		+footer()
			//- Include your components here
		script(src='%=static=%js/separate-js/svg4everybody.min.js')
		script svg4everybody();

		//- Main scripts. You can replace it, but I recommend you to leave it here
		script(src='%=static=%js/main%=hash=%.js')
