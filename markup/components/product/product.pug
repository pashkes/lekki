include ../icon/icon

mixin product(data)
	.product&attributes(attributes)
		if data.sticker
			.product__sticker.sticker
				+icon('sticker', '40', '40')
				span -10%
		.product__top
			a(href="#").product__img
				if data.imgName
					img(data-src="%=static=%img/content/"+data.imgName+".jpg" alt=""+data.title).lazyload.blur-up
			.product__hover-block
				button.product__btn.btn.btn--heart
					+icon('heart', '17', '15')
				a(href="#").product__btn.btn.btn--heart
					+icon('eye', '18', '15')
		.product__info
			h3.product__title
				a(href="#") #{data.title}
			p.product__made #{data.made}
			if !data.info
				.product__footer
					if data.oldCostValue
						span.product__old-cost #{data.oldCostValue}
							span  &#8381;
					.product__buttons
						a(href="#" data-toggle="modal" data-target="#cart-list").product__buy.btn.btn--border-red.btn--icon.js-add-cart
							span.product__btn-text #{data.cost}
								span  &#8381;
							span.product__btn-label Купить
							span.product__cart
								+icon('cart', '20', '17')
						button.btn.btn--heart
							+icon('heart', '17', '15')
