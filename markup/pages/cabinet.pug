doctype html
html(class="no-js", lang="ru")

	include ../components/head/head.pug
	include ../components/footer/footer.pug
	include ../components/header/header
	include ../components/breadcrumbs/breadcrumbs
	include ../components/order-history/order-history
	include ../components/registration/registration
	include ../components/sign-in/sign-in
	head
		+head(head.defaults)
	body
		+header()
		.container
			+breadcrumbs()
		section.cabinet
			.container
				h2.cabinet__title Личный кабинет
				.row
					.col-xl-auto
						+personal-info()
					.col-xl.d-flex.flex-column.flex-grow-1
						h3.cabinet__title-list.title.title--md История заказов
						+order-history(orderHistory)
		+footer()
		+registration()
		+sign-in()
			//- Include your components here
		script(src='%=static=%js/separate-js/svg4everybody.min.js')
		script svg4everybody();

		//- Main scripts. You can replace it, but I recommend you to leave it here
		script(src='%=static=%js/main%=hash=%%=min=%.js')
