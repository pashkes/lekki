						+icon('arrow-right', '14', '11')

				.mobile-menu__content
					.mobile-menu__header
						ul.mobile-menu__btns
							li
								.header__location
									+icon('location', '15', '18')
									select.js-custom-select-location-mobile
										option Москва и МО
										option Санкт-Петербург
							li
								a(href="#").mobile-menu__user-buttons.btn.btn--star.btn--icon
									+icon('star-stroke', '17', '16')
									span 1 200 бонусов
							li
								//replace className .js-open-modal-sign-in on .js-open-tooltip for open tooltip
								button(type="button").mobile-menu__user-buttons.btn.btn--user.btn--icon.js-open-modal-sign-in
									+icon('user', '15', '17')
									span  Войти в личный кабинет
								form.tooltip-custom.js-custom-tooltip
									span.tooltip-custom__title Личный кабинет
									button.tooltip-custom__btn.btn Выйти
						button(type="button").mobile-menu__menu-close.js-close-mobile-menu
							| закрыть меню
							+icon('cross', '14', '14')
					.mobile-menu__body
						.mobile-menu__top-panel
							.row.justify-content-between.align-items-center
								.col
									span.mobile-menu__title Каталог
								.col-auto
									a(href="#").mobile-menu__heart.btn.btn--heart.btn--icon.btn--transparent
										+icon('heart', '17', '15')
						ul.mobile-menu__main
							li.mobile-menu__item
