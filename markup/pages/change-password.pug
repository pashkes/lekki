doctype html
html(class="no-js", lang="ru")

	include ../components/head/head.pug
	include ../components/footer/footer.pug
	include ../components/header/header
	include ../components/breadcrumbs/breadcrumbs
	include ../components/order-history/order-history
	include ../components/registration/registration
	include ../components/sign-in/sign-in
	include ../components/review-not-rating/review-not-rating

	head
		+head(head.defaults)
	body
		+header()
		.container
			+breadcrumbs()
		section.cabinet
			.container
				h2.cabinet__title Личный кабинет
				.row
					.col-xl-auto
						+personal-info()
					.col-xl-auto
						h3.cabinet__title-list.title.title--md Смена пароля
						form.cabinet__body#change-password
							.cabinet__field-row
								.row.align-items-md-center
									.col-md-4.col-lg-3.col-xl-auto
										label(for="#change-password-old").cabinet__label.label Старый пароль
									.col.col-xl-auto.ml-xl-auto
										input(type="password" value="AptekaApteka123" required).cabinet__field.field#change-password-old
										button(type="button").show-pass.js-show-hide-password показать пароль/скрыть
							.cabinet__field-row
								.row.align-items-md-center
									.col-md-4.col-lg-3.col-xl-auto
										label(for="#change-password-new").cabinet__label.label Новый пароль
									.col.col-xl-auto.ml-xl-auto
										input(type="password" value="AptekaApteka123" required).cabinet__field.field#change-password-new
										button(type="button").show-pass.js-show-hide-password показать пароль/скрыть
							.cabinet__field-row
								.row.align-items-md-center
									.col-md-4.col-lg-3.col-xl-auto
										label(for="#change-password-repeat").cabinet__label.label Повторите новый пароль
									.col.col-xl-auto.ml-xl-auto
										input(type="password" value="AptekaApteka123" required).cabinet__field.field#change-password-repeat
										button(type="button").show-pass.js-show-hide-password показать пароль/скрыть

							.cabinet__footer-fields
								.row
									.col.offset-md-4.offset-lg-3.offset-xl-0
										.row.justify-content-between.align-items-center
											.col-auto
												a(href="#").cabinet__cancel Отменить
											.col-auto
												button.cabinet__save.btn.btn--red Сохранить
		+footer()
		+registration()
		+sign-in()
		+review-not-rating()

			//- Include your components here.CaptionCont > span.placeholder
		script(src='%=static=%js/separate-js/svg4everybody.min.js')
		script svg4everybody();

		//- Main scripts. You can replace it, but I recommend you to leave it here
		script(src='%=static=%js/main%=hash=%%=min=%.js')
